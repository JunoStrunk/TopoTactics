{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/local/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/TTServer"
        },
        {
            "label": "Run Client1",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/TTClient",
            "options": {
                "cwd": "${workspaceFolder}/build/bin"
            }
        },
        {
            "label": "Run Client2",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/TTClient",
            "options": {
                "cwd": "${workspaceFolder}/build/bin"
            }
        },
        {
            "label": "Run Server/Client",
            "dependsOn": [
                "Run Server",
                "Run Client1",
                "Run Client2"
            ]
        }
    ],
    "version": "2.0.0"
}